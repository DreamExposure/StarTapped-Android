<resources>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Dark</item>
        <item name="colorAccent">@color/Secondary</item>
        <item name="dividerHorizontal">@color/Dark</item>
        <item name="android:divider">@color/Dark</item>
        <item name="android:horizontalDivider">@color/Dark</item>
        <item name="dividerVertical">@color/Dark</item>
        <item name="android:listDivider">@color/Dark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/Dark</item>
        <item name="colorPrimary">@color/Primary</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowBackground">@color/White</item>
    </style>

    <style name="FullScreenDialogStyle.Transparent" parent="FullScreenDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnimation" />

    <style name="DialogAnimation.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/Dark</item>
        <item name="android:progressTint">@color/Primary</item>
        <item name="android:colorControlActivated">@color/Light</item>
        <item name="android:colorControlNormal">@color/Primary</item>
    </style>

    <style name="NoActionBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
